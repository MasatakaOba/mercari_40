= render "./common/header"
%main
  %section.owl-carousel
    .owl-stage-outer
      .owl-stage
        .owl-item.cloned
          = link_to "", root_path, class: "top-banner main-visual"
        .owl-item.origin.active{style: 'left: 100px;'}
          = link_to "", root_path, class: "top-banner banner-new-life"
        .owl-item.origin
          = link_to "", root_path, class: "top-banner banner-bokurano-heisei"
        .owl-item.origin
          .top-banner.main-visual
            .top-main-visual
              .top-main-visual-content
                %h2
                  スマホでかんたん
                  %br
                  フリマアプリ
                %p
                  メルカリはスマホカメラからすぐに出品できる
                  %br
                  購入時も安心な独自システムのアプリです
                .top-main-visual-store
                  =link_to root_path do
                    =image_tag("app-store.svg", size: "170X50")
                  =link_to root_path do
                    =image_tag("google-play.svg", size: "170X50")
              =image_tag("main_content_pc.png", size: "440x390")
        .owl-item.cloned
          = link_to "", root_path, class: "top-banner banner-new-life"
    .owl-nav
      .owl-prev prev
      .owl-next next
    .owl-dots
      .owl-dot.active-for-dot
      .owl-dot
      .owl-dot
  %section.pickup-container
    %h2.pickup-head ピックアップカテゴリー
    = render "pickup-items", name: "レディース"
    = render "pickup-items", name: "メンズ"
    = render "pickup-items", name: "ベビー・キッズ"
    = render "pickup-items", name: "コスメ・香水・美容"
  %section.pickup-container
    %h2.pickup-head ピックアップブランド
    = render "pickup-items", name: "シャネル"
    = render "pickup-items", name: "ルイヴィトン"
    = render "pickup-items", name: "シュプリーム"
    = render "pickup-items", name: "ナイキ"
= render "./common/app-banner"
= render "./common/footer"
= render "./common/sell-btn"
