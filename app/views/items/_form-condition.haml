- if request.path_info == new_item_path
  = f.select :condition_id, options_from_collection_for_select(Condition.all, :id, :name), { include_blank: "---" },class: "select-default"

- elsif request.path_info == edit_item_path
  = f.select :condition_id, options_from_collection_for_select(Condition.all, :id, :name,selected: "#{@item.condition_id}"), { include_blank: "---" },class: "select-default"
