%nav.bread-crumbs
  %ul
    %li
      %span.mercari
        = link_to "メルカリ", root_path, class: "underline-opacity"
      = fa_icon "angle-right"
    %li
      %span.mercari
        = link_to "マイページ", "#", class: "underline-opacity"
      = fa_icon "angle-right"
